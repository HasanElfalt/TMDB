<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elfalt.tmdb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tmdb_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tmdb_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashScreenActivity"
                    android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.TvDetailsActivity" />
        <activity
            android:name=".ui.TvShowActivity"
            android:label="@string/tv_show" />
        <activity
            android:name=".ui.MovieDetailsActivity"
            android:label="@string/Movie_Detail" />
        <activity
            android:name=".ui.MoviesActivity"
            android:label="@string/movies" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"/>
    </application>

</manifest>